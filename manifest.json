{
  "name": "System Remaster HST",
  "short_name": "HST Flight",
  "description": "Helicopter flight planning and operations management system with advanced performance calculations and route optimization",
  "version": "1.0.0",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "landscape-primary",
  "theme_color": "#15181e",
  "background_color": "#15181e",
  "lang": "en",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "./icon/pixelated.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "./icon/pixelated.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "categories": [
    "productivity",
    "utilities",
    "navigation",
    "business"
  ],
  
  "screenshots": [
    {
      "src": "./screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Flight planning interface with interactive map"
    },
    {
      "src": "./screenshots/mobile-1.png", 
      "sizes": "640x1136",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile flight planning view"
    }
  ],
  
  "shortcuts": [
    {
      "name": "New Flight Plan",
      "short_name": "New Plan",
      "description": "Create a new flight plan",
      "url": "/?action=new-plan",
      "icons": [
        {
          "src": "./icon/pixelated.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Flight Calculator",
      "short_name": "Calculator", 
      "description": "Open flight performance calculator",
      "url": "/?action=calculator",
      "icons": [
        {
          "src": "./icon/pixelated.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Waypoint Search",
      "short_name": "Search",
      "description": "Search for waypoints and navigation points",
      "url": "/?action=search",
      "icons": [
        {
          "src": "./icon/pixelated.png",
          "sizes": "192x192", 
          "type": "image/png"
        }
      ]
    }
  ],

  "share_target": {
    "action": "/share-flight-plan",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "flight_plan",
          "accept": [
            ".kml",
            ".gpx", 
            ".json",
            "application/json",
            "application/vnd.google-earth.kml+xml"
          ]
        }
      ]
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+flightplan",
      "url": "/open-plan?plan=%s"
    }
  ],

  "file_handlers": [
    {
      "action": "/open-flight-plan",
      "accept": {
        "application/json": [".json"],
        "application/vnd.google-earth.kml+xml": [".kml"],
        "application/gpx+xml": [".gpx"]
      }
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "focus-existing"
  },

  "prefer_related_applications": false,
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://system-remaster-hst.example.com/manifest.json"
    }
  ],

  "permissions": [
    "geolocation",
    "notifications",
    "background-sync",
    "periodic-background-sync"
  ],

  "features": [
    "cross-origin-isolated"
  ],

  "custom": {
    "flight_planning": {
      "supported_aircraft_types": ["helicopter"],
      "calculation_modes": ["VFR", "OS", "FR"],
      "units": ["metric", "imperial"],
      "weather_integration": true,
      "offline_capable": true
    },
    "accessibility": {
      "screen_reader_support": true,
      "keyboard_navigation": true,
      "high_contrast": true,
      "voice_control": false
    },
    "performance": {
      "progressive_web_app": true,
      "service_worker": true,
      "offline_first": true,
      "background_sync": true
    }
  }
}